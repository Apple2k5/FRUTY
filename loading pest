<!DOCTYPE html>
<html>
<body>
  <button onclick="loadPest()">Check Pest</button>
  <div>
    <h3 id="pest"></h3>
    <video width="640" height="360" controls autoplay loop>
  <source src="/static/robot_view.mp4" type="video/mp4">
  Your browser does not support the video tag.
</video>
    <p id="fertilizer"></p>
  </div>

  <script>
    function loadPest() {
      fetch('/check_pests')
        .then(res => res.json())
        .then(data => {
          document.getElementById('pest').innerText = "Pest: " + data.pest;
          document.getElementById('fertilizer').innerText = "Fertilizer: " + data.fertilizer;
          let img = document.getElementById('pest-image');
          img.src = data.image;
          img.style.display = 'block';
        });
    }
  </script>
</body>
</html>
